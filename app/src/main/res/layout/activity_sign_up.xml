<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    >


    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        tools:context=".Sign_up">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentStart="true"
            android:textColor="#1A1824"
            android:textSize="20sp"
            />

        <TextView
            android:layout_marginBottom="12dp"
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="120dp"
            android:layout_below="@+id/textView4"
            android:text="Create profile to \n  start your first \n      ToDo List"
            android:textColor="#1A1824"
            android:textSize="24sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/name_edit_text_sign_up"
            android:layout_width="375dp"
            android:layout_height="52dp"
            android:drawableLeft="@drawable/user"
            android:layout_below="@+id/textView8"
            android:ems="10"
            android:layout_marginTop="26dp"
            android:drawablePadding="12dp"
            android:hint="Your name"
            android:inputType="textPersonName"
            android:background="@drawable/edite_text_shape"
            />
        <EditText
            android:id="@+id/email_edit_text_sign_up"
            android:layout_width="375dp"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="12dp"
            android:layout_below="@+id/name_edit_text_sign_up"
            android:ems="10"
            android:hint=" Your email address"
            android:inputType="textEmailAddress"
            android:background="@drawable/edite_text_shape"
            />

        <EditText
            android:id="@+id/password_edit_text_sign_up"
            android:layout_width="375dp"
            android:layout_height="52dp"
            android:ems="10"
            android:drawableStart="@drawable/password"
            android:hint="Your password"
            android:inputType="textPassword"
            android:drawablePadding="12dp"
            android:background="@drawable/edite_text_shape"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/email_edit_text_sign_up" />


        <Button

            android:id="@+id/sign_up_btn"
            android:layout_width="375dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/password_edit_text_sign_up"
            android:background="@drawable/log"
            android:text="Sign up"
            android:textSize="24sp"
            android:onClick="singup"
            android:textAllCaps="false"
            android:textColor="#FFF9F9"
            />
        <TextView
            android:onClick="haveAccount"
            android:id="@+id/haveAccount"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_up_btn"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:text="Already have an Account?"
            />


        <TextView
            android:onClick="login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/haveAccount"
           android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="24sp"
            android:text="Login"
            android:textAllCaps="true"
            />
        <ProgressBar
            android:id="@+id/progress_bar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:progressBarStyleLarge"
            android:layout_centerInParent="true"
            android:visibility="gone"

            />
    </RelativeLayout>
</ScrollView>